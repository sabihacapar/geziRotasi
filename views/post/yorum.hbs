<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">

 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<style>
  body {
    background-color: rgb(240, 217, 186);
  }
  


.vertical-line {
    width: 2px;
    height: 12px;
    background: #41ADD1;
    display: inline-block;
}
 

 
</style>

<div class="container">
  <div class="offset-4">


    
   

    <form action="/post" method="POST" enctype="multipart/form-data">
      <fieldset class="">
        <legend>Bir Yorum Yap</legend>
        
         
         <div class="form-group">
            <label for="yorum">İçerik</label>
            <textarea name="yorum" id="content" cols="30" rows="10"></textarea>
        
        </div>
        <div class="form-group">
            <label for="yorum">Resim eklemek için</label>
            <input type="file" id="yorum" name="post_image" required="required" class="form-control">
        
        </div>
        
        <div class="form-group" style="margin-left: 20px; margin-right:500px;">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Yorum</button>
</div>
    </fieldset>

     
    </form>
  </div>
  <br>
</div>
<br>
<div class="container">
  <div class="offset-4">
    <div class="jumbotron" style="background-color: rgb(189, 216, 226);">
    

<table class="table table-striped" style="margin-left: 20px;">
    <thead>
        <tr>
            <th>Yorumlar</th>
            

            <th></th>

        </tr>
    </thead>
    <tbody>
    
        {{#each list}}
        
        <tr>
            <td>{{this.yorum}}</td>
              <td> <img style="width: 50%;" src="{{this.post_image}}" class="img-fluid"/> </td>  

      <td>{{this.date}}</td>



            

            <td>
                <a href="/post/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ? ');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
             <div class="like">
            <i class="fa fa-thumbs-up"></i>
          
            <span class="vertical-line"></span>
            <span class="like-score">0</span>
        </div>
        <div class="dislike">
            <i class="fa fa-thumbs-down"></i>
         
            <span class="vertical-line"></span>
            <span class="dislike-score">0</span>
        </div>
            </td>


        </tr>
        {{/each}}

    </tbody>

</table>
    </div>
  </div>
</div>

 

<script>
    $(document).ready(function () {
        $(".like").click(function () {
            var likeScore = parseInt($(".like-score").text());
            likeScore++;
            $(".like-score").text(likeScore);
        });
        $(".dislike").click(function () {
            var dislikeScore = parseInt($(".dislike-score").text());
            dislikeScore++;
            $(".dislike-score").text(dislikeScore);
        });
    });
</script>
